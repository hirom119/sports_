   <%= form_with model: @post, local: true do |f| %>
      <div class="container">
       <div style="text-align: center;">
    <h1 class='form-header-text'>
      募集内容
    </h1>
      </div>
  <div class="form-group">
      <label for="exampleFormControlInput1">場所</label>
      <%= f.text_area :place, class:"input-default", id:"place", placeholder:"場所を入力してください", autofocus: true %>
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput1">募集するチーム数</label>
     <%= f.collection_select :recruitment_team_id, RecruitmentTeam.all, :id, :name %>
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput1">スポーツ</label>
    <%= f.collection_select :competition_id, Competition.all, :id, :name %>
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput1">募集する世代を入力してください</label>
      <%= f.collection_select :average_age_id, AverageAge.all, :id, :name %>
</div>
   <div class="form-group">
    <label for="exampleFormControlTextarea1">募集する性別を入力してください</label>
      <%= f.collection_select :gender_id, Gender.all, :id, :name %>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">備考</label>
      <%= f.text_area :remarks,:rows => "5", class:"form-control", id:"remarks" %>
  </div>
  <div style="text-align: center; margin-top: 20px;">
    <%= f.submit "募集する",class:"btn btn-danger" %>
  </div>
<% end %>